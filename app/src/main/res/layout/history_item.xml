<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/row_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toStartOf="@+id/row_history_menu"
        android:text="Medium Text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_history_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_history_title"
        android:layout_alignParentStart="true"
         android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toStartOf="@+id/row_history_menu"
        android:text="TextView"
        android:textColor="#D3D3D4"
        android:textSize="@dimen/_10sdp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/row_history_subtitle"
        android:background="@color/gray"/>

    <ImageView
        android:id="@+id/row_history_menu"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tint="@color/blue_icons"
        android:src="@drawable/ic_more"/>

</RelativeLayout>