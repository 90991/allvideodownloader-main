<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:background="@android:color/transparent"
     android:elevation="@dimen/_5sdp"
    app:contentPaddingBottom="@dimen/_40sdp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_alert"
                android:layout_width="@dimen/_50sdp"
                android:src="@drawable/ic_question"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_50sdp"/>

            <TextView
                android:id="@+id/txt_alert"
                android:layout_below="@id/img_alert"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="19sp"
                android:text="Are you sure.You want to exit?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/txt_alert"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_yes"
                    android:layout_width="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:backgroundTint="#02DA71"
                    android:text="Yes"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_no"
                    android:layout_width="70dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/tudou"
                    android:text="No"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>



</androidx.cardview.widget.CardView>